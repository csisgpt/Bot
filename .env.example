# App runtime
NODE_ENV=development
APP_NAME=crypto-signals-bot
TZ=UTC
LOG_LEVEL=info
PORT=3000
WORKER_PORT=3001

# Database (Liara Postgres requires sslmode=require)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DBNAME?schema=public&sslmode=require"
PRISMA_LOG_LEVEL=info

# Redis (Liara uses redis:// or rediss://)
REDIS_URL="rediss://:PASSWORD@HOST:PORT/0"

# Redis fallback
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Queue
QUEUE_SIGNALS_NAME=signals
QUEUE_CONCURRENCY=5

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_ID=
TELEGRAM_BOT_USERNAME=
TELEGRAM_OWNER_USER_ID=
TELEGRAM_OWNER_USERNAME=
OWNER_USER_ID=
ADMIN_TEST_TOKEN=
TELEGRAM_SIGNAL_CHANNEL_ID=
TELEGRAM_SIGNAL_CHANNEL_USERNAME=
TELEGRAM_SIGNAL_CHANNEL_TITLE=
TELEGRAM_SIGNAL_GROUP_ID=
TELEGRAM_SIGNAL_GROUP_TITLE=
TELEGRAM_PARSE_MODE=HTML
TELEGRAM_DISABLE_WEB_PAGE_PREVIEW=true

# Price ticker
PRICE_TICKER_ENABLED=false
PRICE_TICKER_POST_SECONDS=10
PRICE_TICKER_INSTRUMENTS=XAUTUSDT
PRICE_TICKER_POST_TO_GROUP=true
PRICE_TICKER_POST_TO_CHANNEL=true

# Binance WebSocket
BINANCE_WS_ENABLED=true
BINANCE_WS_BASE_URL=wss://stream.binance.com:9443
BINANCE_WS_RECONNECT_MS=3000
BINANCE_WS_STREAMS=miniTicker
BINANCE_WS_INSTRUMENTS=XAUTUSDT

# Binance REST fallback
BINANCE_REST_BASE_URL=https://api.binance.com
BINANCE_REST_TIMEOUT_MS=8000

# Price cache
PRICE_CACHE_TTL_SECONDS=120

# Assets & instruments
ASSETS_ENABLED=GOLD,CRYPTO
GOLD_INSTRUMENTS=XAUTUSDT
CRYPTO_INSTRUMENTS=BTCUSDT,ETHUSDT
BINANCE_SYMBOLS=

# Price providers
PRICE_PROVIDER_GOLD=BINANCE_SPOT
PRICE_PROVIDER_CRYPTO=BINANCE_SPOT

# Binance Spot
BINANCE_BASE_URL=https://api.binance.com
BINANCE_INTERVAL=15m
BINANCE_KLINES_LIMIT=200
BINANCE_REQUEST_TIMEOUT_MS=10000

# Strategy selection
STRATEGIES_ENABLED=ema_rsi,rsi_threshold,breakout,macd

# Strategy params
EMA_FAST_PERIOD=12
EMA_SLOW_PERIOD=26
RSI_PERIOD=14
RSI_BUY_THRESHOLD=30
RSI_SELL_THRESHOLD=70
BREAKOUT_LOOKBACK=20
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9

# Risk levels
ENABLE_RISK_LEVELS=true
ATR_PERIOD=14
SL_ATR_MULTIPLIER=1.5
TP1_ATR_MULTIPLIER=2
TP2_ATR_MULTIPLIER=3

# Anti-spam
SIGNAL_DEDUPE_TTL_SECONDS=7200
SIGNAL_MIN_COOLDOWN_SECONDS=300

# TradingView Webhook
TRADINGVIEW_WEBHOOK_ENABLED=false
TRADINGVIEW_WEBHOOK_SECRET=
TRADINGVIEW_DEFAULT_ASSET_TYPE=GOLD
TRADINGVIEW_DEFAULT_INSTRUMENT=XAUTUSDT
TRADINGVIEW_DEFAULT_INTERVAL=15m
TRADINGVIEW_DEFAULT_STRATEGY=tradingview

# TradingView Email (IMAP)
TRADINGVIEW_EMAIL_ENABLED=false
TRADINGVIEW_IMAP_HOST=
TRADINGVIEW_IMAP_PORT=993
TRADINGVIEW_IMAP_SECURE=true
TRADINGVIEW_IMAP_USER=
TRADINGVIEW_IMAP_PASS=
TRADINGVIEW_EMAIL_FOLDER=INBOX
TRADINGVIEW_EMAIL_POLL_SECONDS=30
