{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@libs/binance": ["libs/binance/src/index.ts"],
      "@libs/signals": ["libs/signals/src/index.ts"],
      "@libs/telegram": ["libs/telegram/src/index.ts"],
      "@libs/core": ["libs/core/src/index.ts"]
    }
  }
}
