generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Signal {
  id        String   @id @default(uuid())
  source    String   @default("BINANCE")
  assetType String
  instrument String
  interval  String
  strategy  String
  kind      String
  side      String
  time      DateTime
  price     Float?
  confidence Int
  tags      String[]
  reason    String
  levels    Json?
  externalId String?
  rawPayload Json?
  createdAt DateTime @default(now())

  @@index([assetType, instrument, interval, time])
}
